<item><persName n="Asion,,William,B.,," id="n-0001.0000.00000.00021" reg="default:Asion,William,B.,," authname="asion,william,b."><foreName full="yes">William</foreName> <foreName full="yes">B.</foreName> <surname full="yes">Asion</surname></persName>, </item> 
<item><persName n="Johnston,,Peter,C.,," id="n-0001.0000.00000.00022" reg="default:Johnston,Peter,C.,," authname="johnston,peter,c."><foreName full="yes">Peter</foreName> <foreName full="yes">C.</foreName> <surname full="yes">Johnston</surname></persName>, </item> 
<item><placeName reg="James Barbour">James Barbour</placeName>, </item> 
