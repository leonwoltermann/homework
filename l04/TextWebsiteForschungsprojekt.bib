	institution = {{Social Science Research Network}},
	keywords = {Annika Bj{\"o}rkdahl,Cultural Heritage and Peace: Introducing an Analytical Framework to Study Mnemonic Formations,Johanna Mannergren Selimovic,Memory Politics,SSRN,Stefanie Kappler,Susanne Buckley-Zistel,Timothy Williams},
